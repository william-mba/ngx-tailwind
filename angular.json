{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "pnpm",
    "schematicCollections": [
      "angular-eslint"
    ]
  },
  "newProjectRoot": "projects",
  "projects": {
    "ngx-tailwind-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "inlineStyle": true
        }
      },
      "root": "projects/ngx-tailwind-app",
      "sourceRoot": "projects/ngx-tailwind-app/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/ngx-tailwind-app",
            "index": "projects/ngx-tailwind-app/src/index.html",
            "browser": "projects/ngx-tailwind-app/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "projects/ngx-tailwind-app/tsconfig.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/ngx-tailwind-app/public"
              }
            ],
            "styles": [
              "projects/ngx-tailwind-app/src/styles.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "ngx-tailwind-app:build:production"
            },
            "development": {
              "buildTarget": "ngx-tailwind-app:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "projects/ngx-tailwind-app/tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/ngx-tailwind-app/public"
              }
            ],
            "styles": [
              "projects/ngx-tailwind-app/src/styles.css"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/ngx-tailwind-app/**/*.ts",
              "projects/ngx-tailwind-app/**/*.html"
            ],
            "eslintConfig": "projects/ngx-tailwind-app/eslint.config.js"
          }
        }
      }
    },
    "ngx-tailwind-ui": {
      "projectType": "library",
      "root": "projects/ngx-tailwind-ui",
      "sourceRoot": "projects/ngx-tailwind-ui/src",
      "prefix": "tw",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ngx-tailwind-ui/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-tailwind-ui/tsconfig.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-tailwind-ui/tsconfig.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/ngx-tailwind-ui/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/ngx-tailwind-ui/**/*.ts",
              "projects/ngx-tailwind-ui/**/*.html"
            ],
            "eslintConfig": "projects/ngx-tailwind-ui/eslint.config.js"
          }
        }
      }
    },
    "ngx-tailwind-core": {
      "projectType": "library",
      "root": "projects/ngx-tailwind-core",
      "sourceRoot": "projects/ngx-tailwind-core/src",
      "prefix": "tw",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ngx-tailwind-core/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-tailwind-core/tsconfig.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-tailwind-core/tsconfig.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/ngx-tailwind-core/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/ngx-tailwind-core/**/*.ts",
              "projects/ngx-tailwind-core/**/*.html"
            ],
            "eslintConfig": "projects/ngx-tailwind-core/eslint.config.js"
          }
        }
      }
    }
  }
}
