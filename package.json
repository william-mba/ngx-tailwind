{
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "test:ngx-tailwind-app": "ng test --project ngx-tailwind-app",
    "test:ngx-tailwind-ui": "ng test --project ngx-tailwind-ui",
    "test:ngx-tailwind-core": "ng test --project ngx-tailwind-core",
    "test:ngx-tailwind-ui:ci": "ng test --project ngx-tailwind-ui --no-watch --no-progress --karma-config projects/ngx-tailwind-ui/karma.conf.js --code-coverage",
    "test:ngx-tailwind-core:ci": "ng test --project ngx-tailwind-core --no-watch --no-progress --karma-config projects/ngx-tailwind-core/karma.conf.js --code-coverage",
    "test:ngx-tailwind-app:ci": "ng test --project ngx-tailwind-app --no-watch --no-progress --karma-config projects/ngx-tailwind-app/karma.conf.js --code-coverage",
    "test:all": "pnpm test:ngx-tailwind-core && pnpm test:ngx-tailwind-ui && pnpm test:ngx-tailwind-app",
    "test:all:ci": "pnpm test:ngx-tailwind-core:ci && pnpm test:ngx-tailwind-ui:ci && pnpm test:ngx-tailwind-app:ci",
    "build:ngx-tailwind-app": "ng build --project ngx-tailwind-app",
    "build:ngx-tailwind-ui": "ng build --project ngx-tailwind-ui",
    "build:ngx-tailwind-core": "ng build --project ngx-tailwind-core",
    "build:all": "pnpm build:ngx-tailwind-core && pnpm build:ngx-tailwind-ui && pnpm build:ngx-tailwind-app",
    "build:ngx-tailwind-app:css": "npx @tailwindcss/cli -i projects/ngx-tailwind-app/src/tailwind.css -o projects/ngx-tailwind-app/src/styles.css",
    "build:ngx-tailwind-ui:css": "npx @tailwindcss/cli -i projects/ngx-tailwind-ui/src/tailwind.css -o projects/ngx-tailwind-css/styles.css",
    "watch:ngx-tailwind-ui": "ng build --watch --project ngx-tailwind",
    "watch:ngx-tailwind-ui:css": "npx @tailwindcss/cli -i projects/ngx-tailwind/src/tailwind.css -o projects/ngx-tailwind/src/styles.css --watch",
    "watch:app:css": "npx @tailwindcss/cli -i projects/ngx-tailwind-app/src/tailwind.css -o projects/ngx-tailwind-app/src/styles.css --watch",
    "publish": "pnpm build:ngx-tailwind-ui && cd dist/ngx-tailwind && npm publish",
    "sync": "pnpm build:ngx-tailwind-ui && pnpm update @ngx-tailwind/ui@file:dist/ngx-tailwind-ui && pnpm start",
    "lint:ngx-tailwind-ui": "ng lint --project ngx-tailwind-ui",
    "lint:ngx-tailwind-core": "ng lint --project ngx-tailwind-core",
    "lint:ngx-tailwind-app": "ng lint --project ngx-tailwind-app",
    "lint:all": "pnpm lint:ngx-tailwind-core && pnpm lint:ngx-tailwind-ui && pnpm lint:ngx-tailwind-app",
    "lint": "ng lint",
    "deps:check:core": "pnpx dpdm --tree false --ext .ts projects/ngx-tailwind-core/src/* --exclude ^@angular/core$",
    "deps:check:ui": "pnpx dpdm --tree false --ext .ts projects/ngx-tailwind-ui/src/* --exclude ^@angular/core$",
    "deps:check:app": "pnpx dpdm --tree false --ext .ts projects/ngx-tailwind-app/src/* --exclude ^@angular/core$",
    "deps:check:all": "pnpm deps:check:core && pnpm deps:check:ui && pnpm deps:check:app",
    "verify": "pnpm lint:all && pnpm test:all:ci && pnpm build:all && pnpm deps:check:all",
    "install-chrome": "pnpx puppeteer browsers install chrome-headless-shell"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.1.1",
    "@angular/common": "^19.1.1",
    "@angular/compiler": "^19.1.1",
    "@angular/core": "^19.1.1",
    "@angular/forms": "^19.1.1",
    "@angular/platform-browser": "^19.1.1",
    "@angular/platform-browser-dynamic": "^19.1.1",
    "@angular/router": "^19.1.1",
    "@ngx-tailwind/core": "file:projects\\ngx-tailwind-core\\src",
    "@tailwindcss/cli": "4.0.0-beta.9",
    "rxjs": "~7.8.1",
    "tailwindcss": "4.0.0-beta.9",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.1.1",
    "@angular/cli": "^19.1.1",
    "@angular/compiler-cli": "^19.1.1",
    "@eslint/js": "^9.18.0",
    "@types/jasmine": "~5.1.5",
    "angular-eslint": "19.0.2",
    "clean-css": "^5.3.3",
    "dpdm": "^3.14.0",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-junit-reporter": "^2.0.1",
    "ng-packagr": "^19.1.0",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^23.11.1",
    "typescript": "~5.6.3",
    "typescript-eslint": "8.18.0"
  },
  "packageManager": "pnpm@10.0.0+sha512.b8fef5494bd3fe4cbd4edabd0745df2ee5be3e4b0b8b08fa643aa3e4c6702ccc0f00d68fa8a8c9858a735a0032485a44990ed2810526c875e416f001b17df12b"
}
