{
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:app": "ng build --configuration production --project ngxtw-app",
    "build:lib": "ng build --configuration production --project ngxtw-lib --watch",
    "build:css": "npx @tailwindcss/cli -i projects/ngxtw-app/src/tailwind.css -o projects/ngxtw-app/src/styles.css",
    "test:app": "ng test --project ngxtw-app",
    "test:lib": "ng test --project ngxtw-lib",
    "test:lib:ci": "ng test --project ngxtw-lib --watch=false --karma-config karma.conf.ci.js --code-coverage",
    "watch:app-css": "npx @tailwindcss/cli -i projects/ngxtw-app/src/tailwind.css -o projects/ngxtw-app/src/styles.css --watch",
    "watch:lib": "ng build --watch --configuration development --project ngxtw-lib",
    "watch:app": "ng build --watch --configuration development --project ngxtw-app",
    "dev": "npm-run-all --parallel watch:lib watch:app-css start",
    "publish": "npm run build:lib && cd dist/ngxtw-lib && npm publish"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@tailwindcss/cli": "^4.0.0-beta.4",
    "ngxtw": "file:dist/ngxtw-lib",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.0.0-beta.4",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.2",
    "@angular/cli": "^19.0.1",
    "@angular/compiler-cli": "^19.0.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^19.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.6.2"
  }
}
